            <th>Ilość / Qty</th>
            <th>Cena netto / Unit net price</th>
            <th>Wartość netto / Total net price</th>
            <th>Stawka VAT / VAT rate</th>
            <th>Kwota VAT / VAT amount</th>
            <th>Wartość brutto / Total gross price </th>
        </tr>
        #set($ticketNo = 1)
        #set($vat = $conf.getAsInt('INVOICE_VAT_RATE'))
        #set($totalAmount = 0)

        #foreach($ticketEntry in $invoice.getTicketsByCategory().asMap().entrySet())
            <tr>
                <td>$ticketNo</td>
                <td>$ticketEntry.key.name</td>
                <td>$ticketEntry.value.size()</td>
                <td>$number.format("#0.00", $ticketEntry.key.price)</td>
                <td>$number.format("#0.00", $math.mul($ticketEntry.key.price, $ticketEntry.value.size()))</td>
                <td>$vat %</td>
                <td>$number.format("#0.00", $math.mul($math.mul($ticketEntry.key.price, $ticketEntry.value.size()), $math.div($vat, 100)))</td>
                #set($totalPerCategory = $math.mul($math.mul($ticketEntry.key.price, $ticketEntry.value.size()), $math.add(1,$math.div($vat, 100))))
                <td>$number.format("#0.00", $totalPerCategory)</td>
                #set($totalAmount = $totalAmount + $totalPerCategory)
            </tr>
            #set($ticketNo = $ticketNo + 1)
        #end
    </table>

