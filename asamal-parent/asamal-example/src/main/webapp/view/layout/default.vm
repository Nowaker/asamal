<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">Tickets Registration</a>

            <div class="nav-collapse">
                <ul class="nav">
                    <li #if($c.name == 'home' && $view == 'index')class="active"#end>
                        <a href="$tag.link('home', 'index')">Home</a></li>
                    <li #if($c.name == 'tickets' && $view == 'buy')class="active"#end>
                        <a href="$tag.link('tickets', 'buy')">Buy Tickets</a></li>
                    #if($login.loggedIn == false)
                        <li #if($c.name == 'login' && $view == 'register')class="active"#end>
                            <a href="$tag.link('login', 'register')">Register</a></li>
                    #end

                </ul>

                <ul class="nav pull-right">
                    #if($login.admin)
                        <li class="dropdown #if($c.name == 'admin')active #end">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Admin
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">

                                <li #if($c.name == 'admin' && $view == 'tickets')class="active"#end>
                                    <a href="$tag.link('admin', 'tickets')">Tickets</a></li>
                                <li #if($c.name == 'admin' && $view == 'approvePayments')class="active"#end>
                                    <a href="$tag.link('admin', 'approvePayments')">Payments</a></li>
                                <li #if($c.name == 'admin' && $view == 'configuration')class="active"#end>
                                    <a href="$tag.link('admin', 'configuration')">Configuration</a></li>
                            </ul>
                        </li>
                    #end
                </ul>

                <p class="navbar-text pull-right">
                    #if($login.loggedIn)
                        Logged in as $login.user.username
                        <a href="$tag.link('login', 'logout')">Logout</a>
                    #else
                        <a href="$tag.link('login', 'login')">Log in</a>
                    #end
                </p>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container">

    <div id="messages">
        #success('*')
        #warn('*')
        #err('*')
        #info('*')
    </div>

    #includeRegion('content')

    <footer>
        #includeRegion('footer')
