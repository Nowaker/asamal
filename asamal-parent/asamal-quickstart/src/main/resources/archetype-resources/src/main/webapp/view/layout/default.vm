#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>${symbol_dollar}pageTitle</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    <link href="${symbol_dollar}tag.cssLink("bootstrap.css")" rel="stylesheet">
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="${symbol_dollar}tag.cssLink("bootstrap-responsive.css")" rel="stylesheet">

    ${symbol_dollar}tag.asamalLinks()
</head>

<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="${symbol_pound}">Asamal Example App</a>

            <div class="nav-collapse">
                <ul class="nav">
                    <li ${symbol_pound}if(${symbol_dollar}controller.name == 'home' && ${symbol_dollar}view == 'index')class="active"${symbol_pound}end>
                        <a href="${symbol_dollar}tag.link('home', 'index')">Home</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container">

    <div id="messages">
        ${symbol_pound}if(${symbol_dollar}success)
            <div class="alert alert-success">
                <ul>
                    ${symbol_pound}foreach(${symbol_dollar}m in ${symbol_dollar}success)
                        <li>${symbol_dollar}m</li>
                    ${symbol_pound}end
                </ul>
            </div>
        ${symbol_pound}end
        ${symbol_pound}if(${symbol_dollar}warn)
            <div class="alert alert-block">
                <ul>
                    ${symbol_pound}foreach(${symbol_dollar}m in ${symbol_dollar}warn)
                        <li>${symbol_dollar}m</li>
                    ${symbol_pound}end
                </ul>
            </div>
        ${symbol_pound}end
        ${symbol_pound}if(${symbol_dollar}err)
            <div class="alert alert-error">
                <ul>
                    ${symbol_pound}foreach(${symbol_dollar}m in ${symbol_dollar}err)
                        <li>${symbol_dollar}m</li>
                    ${symbol_pound}end
                </ul>
            </div>
        ${symbol_pound}end
        ${symbol_pound}if(${symbol_dollar}info)
            <div class="alert alert-info">
                <ul>
                    ${symbol_pound}foreach(${symbol_dollar}m in ${symbol_dollar}info)
                        <li>${symbol_dollar}m</li>
                    ${symbol_pound}end
                </ul>
            </div>
        ${symbol_pound}end
    </div>

    ${symbol_pound}includeRegion('content')

    <footer>
        ${symbol_pound}includeRegion('footer')
    </footer>

</div>
<!-- /container -->

<!-- Le javascript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="${symbol_dollar}tag.jsLink("jquery-min-1.7.1.js")"></script>
<script src="${symbol_dollar}tag.jsLink("bootstrap.min.js")"></script>

</body>
</html>